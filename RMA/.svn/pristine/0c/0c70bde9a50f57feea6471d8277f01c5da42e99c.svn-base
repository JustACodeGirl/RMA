.header {
  padding-bottom: 10px;
  margin-bottom: 30px;
}

.row {
  margin-left: 0;
  margin-right: 0;
}

.container-narrow {
  max-width: 730px;
  box-shadow: 0 1px 6px rgba(124, 124, 124, 0.42);
  -webkit-box-shadow: 0 1px 6px rgba(124, 124, 124, 0.42);
  -moz-box-shadow: 0 1px 6px rgba(124, 124, 124, 0.42);
}

.content {
  padding-bottom: 10px;
  margin-bottom: 30px;
}

.wrapper {
  margin: 20px auto;
}

.round {
  border-radius: 6px;
}

.bg-light {
  background: #f2f2f2;
}

.widget {
  margin-bottom: 30px;
  overflow: hidden;
}

.m-l {
  margin-left: 10px;
}

.m-t {
  margin-top: 15px;
}

.m-b {
  margin-bottom: 20px;
}

.m-b-md {
  margin-bottom: 30px;
}

.m-b-lg {
  margin-bottom: 50px;
}

.m-b-sm {
  margin-bottom: 10px;
}

.bottom {
  border-bottom: 1px dotted #d2d2d2;
}

.form-header {
  padding: 1px 0;
  color: #31b0d5;
  font-weight: bold;
  border-bottom: 2px solid #31b0d5;
}

.form-content {
  padding: 0 20px;
}

.form-content textarea {
  resize: none;
}

.form-footer {
  padding: 20px;
}

.signin-header {
  margin: 60px 0 40px 0;
}

.signin-header a {
  text-decoration: none;
}

.form-signin {
  max-width: 340px;
  padding: 25px 35px 40px 35px;
  margin: 0 auto;
  border-radius: 10px;
}

.form-signin .form-signin-heading,
.form-signin .checkbox {
  margin-bottom: 30px;
}

.form-signin .checkbox {
  font-weight: normal;
}

.form-signin .form-control {
  position: relative;
  height: auto;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  padding: 10px;
  font-size: 16px;
}

.form-signin .form-control:focus {
  z-index: 2;
}

.form-signin input[type="text"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}

.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

.no-shadow {
  box-shadow: none;
}

.no-border {
  border: none;
}

.line {
  margin-top: 10px;
  margin-bottom: 20px;
  border-bottom: 1px dotted #adadad;
}

.reply {
  border-radius: 2px;
  padding: 15px 0px 15px 8px;
}

.item:hover {
  background-color: #ddd;
  cursor: pointer;
}

.attach img {
  width: 300px;
}

.slide-up.ng-enter {
  opacity: 0.8;
  margin-top: 100px;
  transition: 0.5s linear all;
  -webkit-transition: 0.5s linear all;
}

.slide-up.ng-enter.ng-enter-active {
  opacity: 1;
  margin-top: 0;
}

.slide-up.ng-leave {
  transition: 0.5s linear all;
  -webkit-transition: 0.5s linear all;
}

.slide-up.ng-leave.ng-leave-active {
  margin-top: 300px;
  opacity: 0;
}

.slide-left.ng-enter {
  opacity: 0.8;
  margin-left: -100px;
  transition: 0.5s linear all;
  -webkit-transition: 0.5s linear all;
}

.slide-left.ng-enter.ng-enter-active {
  opacity: 1;
  margin-left: 0;
}

.ngViewAnimate.ng-enter {
  margin-top: -15px;
  transition: 0.2s linear all;
  -webkit-transition: 0.2s linear all;
}

.ngViewAnimate.ng-enter.ng-enter-active {
  margin-top: 0;
}

.form-validation .form-control.ng-dirty.ng-invalid {
  border-color: #f05050;
}

.form-validation .form-control.ng-dirty.ng-valid,
.form-validation .form-control.ng-dirty.ng-valid:focus {
  border-color: #27c24c;
}

.form-validation .i-checks .ng-invalid.ng-dirty + i {
  border-color: #f05050;
}
.btn-bl{
  background-color: #00C1F3;
  border: none
}